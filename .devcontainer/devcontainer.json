{
    "name": "Forth Project",
    "build": {
        "dockerfile": "Dockerfile"
    },

    "customizations": {
        "vscode": {
            "extensions": [
				"fttx.language-forth",
                "ms-azuretools.vscode-docker",
                "ms-vscode.makefile-tools"
			]
        },
        "settings": { 
            "terminal.integrated.shell.linux": "/bin/bash",
            "git.enabled": true,
            "git.autofetch": true,
            "git.confirmSync": false
        }
    },

    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2.8.0": {}
      }
}

